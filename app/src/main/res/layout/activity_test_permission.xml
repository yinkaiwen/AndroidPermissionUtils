<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Button
        android:id="@+id/btn_check_calendar"
        style="@style/ButtonStyle"
        android:text="@string/check_permission"/>
    <Button
        app:layout_constraintTop_toBottomOf="@id/btn_check_calendar"
        android:id="@+id/btn_request_calendar"
        style="@style/ButtonStyle"
        android:text="@string/request_calendar_permission"/>
    <Button
        app:layout_constraintTop_toBottomOf="@id/btn_request_calendar"
        android:id="@+id/btn_request_contact_group"
        style="@style/ButtonStyle"
        android:text="@string/btn_request_contact_group"/>

</android.support.constraint.ConstraintLayout>